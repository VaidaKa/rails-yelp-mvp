<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="text-center mb-4">Explore Restaurants</h1>

      <div class="row">
        <% @restaurants.each do |restaurant| %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
                <p class="card-text"><%= restaurant.address %></p>
                <p class="card-text text-muted"><%= pluralize(restaurant.reviews.count, "Review") %></p>
                <p class="card-text"><small class="text-muted">Category: <%= restaurant.category.capitalize %></small></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-4">
        <%= link_to "Add a New Restaurant", new_restaurant_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
